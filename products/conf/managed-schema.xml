<?xml version="1.0" encoding="UTF-8" ?>
<schema name="products" version="1.6">
  <!-- Required unique key -->
  <uniqueKey>id</uniqueKey>

  <!-- ========== Field Types ========== -->
  <types>
    <!-- String -->
    <fieldType name="string" class="solr.StrField" sortMissingLast="true" omitNorms="true"/>

    <!-- General text (for name, description) -->
    <fieldType name="text_general" class="solr.TextField" positionIncrementGap="100">
      <analyzer type="index">
        <tokenizer class="solr.StandardTokenizerFactory"/>
        <filter class="solr.LowerCaseFilterFactory"/>
      </analyzer>
      <analyzer type="query">
        <tokenizer class="solr.StandardTokenizerFactory"/>
        <filter class="solr.LowerCaseFilterFactory"/>
      </analyzer>
    </fieldType>

    <!-- Double -->
    <fieldType name="double" class="solr.TrieDoubleField" precisionStep="0" positionIncrementGap="0"/>

    <!-- Boolean -->
    <fieldType name="boolean" class="solr.BoolField"/>

    <!-- _version_ field required for updateLog -->
    <fieldType name="_version_" class="solr.LongPointField" docValues="true"/>
  </types>

  <!-- ========== Fields ========== -->
  <fields>
    <field name="id" type="string" indexed="true" stored="true" required="true"/>
    <field name="name" type="text_general" indexed="true" stored="true"/>
    <field name="category" type="string" indexed="true" stored="true"/>
    <field name="price" type="double" indexed="true" stored="true"/>
    <field name="description" type="text_general" indexed="true" stored="true"/>
    <field name="active" type="boolean" indexed="true" stored="true" default="true"/>
    <field name="_version_" type="_version_" indexed="true" stored="true" multiValued="false"/>
  </fields>
</schema>

